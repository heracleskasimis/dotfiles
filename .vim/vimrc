map <leader><Tab>n :tabe<cr>
map <leader><Tab>d :tabclose<cr>
map <leader><Tab>[ :tabprevious<cr>
map <leader><Tab>p :tabprevious<cr>
map <leader><Tab>] :tabnext<cr>
map <leader><Tab>n :tabnext<cr>

map <leader>op :NERDTreeToggle<cr>
map <leader>oP :NERDTreeFind<cr>

map <leader>bb :CtrlPBuffer<cr>
map <leader>b, :CtrlPBuffer<cr>
map <leader>b] :bnext<cr>
map <leader>bn :bnext<cr>
map <leader>b[ :bprevious<cr>
map <leader>bp :bprevious<cr>
map <leader>bk :Bclose<cr>
map <leader>bN :vnew<cr>
map <leader>< :CtrlPBuffer<cr>

map <leader>cd :CtrlPTag<cr><c-\>w

map <leader>w <c-w>
map <c-Tab> <c-w>w
map <leader>f/ :CtrlP<cr>
map <leader>p/ :CtrlP<cr>
map <leader><leader> :CtrlP<cr>
map <leader>/p :Ack! <c-r>=expand("<cword>")<cr> <c-r>=FindRootDirectory()<cr><c-b><s-right><s-right>
map <leader>/d :Ack! <c-r>=expand("<cword>")<cr> <c-r>=FindRootDirectory()<cr><c-b><s-right><s-right>
map <leader>]e :lnext<cr>
map <leader>[e :lprevious<cr>

