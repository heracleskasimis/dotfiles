{
  "$schema": "https://opencode.ai/theme.json",
  "defs": {
    "textMuted": "#808080",

    "cyan": "#00cdcd",
    "magenta": "#8d5796",
    "red": "#ff70a4",
    "yellow": "#ffff44",
    "green": "#00a8a8",
    "blue": "#008080",

    "fg": "#282828",
    "bg": "#fafafa",

    "grey1": "#303030",
    "grey2": "#2c2c2c",
    "grey3": "#242424",
    "grey4": "#000000",

    "grey5": "#ebebeb",
    "grey6": "#f0f0f0",
    "grey7": "#f4f4f4",
    "grey8": "#ffffff"
  },
  "theme": {
    "primary": "cyan",
    "secondary": "magenta",
    "accent": "cyan",
    "error": "red",
    "warning": "magenta",
    "success": "green",
    "info": "cyan",
    "text": {
      "light": "fg",
      "dark": "bg"
    },
    "textMuted": "textMuted",
    "background": {
      "light": "bg",
      "dark": "fg"
    },
    "backgroundPanel": {
      "light": "grey7",
      "dark": "grey4"
    },
    "backgroundElement": {
      "light": "grey7",
      "dark": "grey1"
    },
    "border": {
      "light": "grey7",
      "dark": "grey3"
    },
    "borderActive": {
      "light": "grey7",
      "dark": "grey3"
    },
    "borderSubtle": {
      "light": "grey8",
      "dark": "grey4"
    },
    "diffAdded": "green",
    "diffRemoved": "red",
    "diffContext": {
      "light": "grey8",
      "dark": "grey4"
    },
    "diffHunkHeader": {
      "light": "grey8",
      "dark": "grey4"
    },
    "diffHighlightAdded": "green",
    "diffHighlightRemoved": "red",
    "diffAddedBg": {
      "light": "grey5",
      "dark": "grey1"
    },
    "diffRemovedBg": {
      "light": "grey5",
      "dark": "grey1"
    },
    "diffContextBg": {
      "light": "grey5",
      "dark": "grey1"
    },
    "diffLineNumber": {
      "light": "grey3",
      "dark": "grey7"
    },
    "diffAddedLineNumberBg": {
      "light": "grey6",
      "dark": "grey2"
    },
    "diffRemovedLineNumberBg": {
      "light": "grey6",
      "dark": "grey2"
    },
    "markdownText": {
      "light": "fg",
      "dark": "bg"
    },
    "markdownHeading": {
      "light": "fg",
      "dark": "bg"
    },
    "markdownLink": "blue",
    "markdownLinkText": "cyan",
    "markdownCode": "green",
    "markdownBlockQuote": "magenta",
    "markdownEmph": "magenta",
    "markdownStrong": {
      "light": "fg",
      "dark": "bg"
    },
    "markdownHorizontalRule": {
      "light": "grey8",
      "dark": "grey4"
    },
    "markdownListItem": "blue",
    "markdownListEnumeration": "cyan",
    "markdownImage": "blue",
    "markdownImageText": "cyan",
    "markdownCodeBlock": {
      "light": "fg",
      "dark": "bg"
    },
    "syntaxComment": "textMuted",
    "syntaxKeyword": "magenta",
    "syntaxFunction": "blue",
    "syntaxVariable": {
      "light": "fg",
      "dark": "bg"
    },
    "syntaxString": "green",
    "syntaxNumber": "magenta",
    "syntaxType": "cyan",
    "syntaxOperator": "cyan",
    "syntaxPunctuation": {
      "light": "fg",
      "dark": "bg"
    }
  }
}
